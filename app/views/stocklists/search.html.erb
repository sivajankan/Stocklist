<h1>Stock Enlisted</h1>
<div style="width: 1200px; margin: 10px auto; ">
<%= form_tag :stocksearch_path, :method => 'get' do %>
<div style="width: 1200px; margin: 10px auto; >
<%= label(:post, :searchsymbol, "Symbol") %>
<input type="text" id="searchsymbol" name="searchsymbol" size="20" value='<%= "#{params[:searchsymbol]}" %>' />
<%= submit_tag "Search", :name => nil %>
</div>
<% end %>
</div>
<div classz="scroll" style="width: 1200px; margin: 10px auto;">
<% if @stocklist %>
<%= paginate @stocklist %>
<% end %>
